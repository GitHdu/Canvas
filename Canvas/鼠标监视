<canvas id="canvas" style="margin:50px auto;border:1px solid #ccc;display:block" onmousemove="mousexy(event)"></canvas>
<div id="ds"></div>
<script>
    window.onload=function(){
        var canvas=document.getElementById("canvas");
        canvas.width=600;
        canvas.height=300;
        var context=canvas.getContext("2d");


    }
function mousexy(n)
{
    x=n.clientX;
    y=n.clientY;
    document.getElementById("ds").innerHTML="坐标: x轴"+x+" y轴"+y;
}
</script>
